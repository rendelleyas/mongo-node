<h3>{{viewTitle}}</h3>

<form action="/employee" method="post">
<input type="hidden" name="_id" value="{{employee._id}}"> 
    <div class="form-group">
        <label for="">Full name</label>
        <input type="text" name="fullname" placeholder="Full name" class="form-control" value="{{employee.fullname}}">
        <div class="text-danger">
            {{employee.fullanmeError}}
        </div>
    </div>
    <div class="form-group">
        <label for="">E-mail</label>
        <input type="text" name="email" placeholder="E-mail" class="form-control" value="{{employee.email}}"> 
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="">Mobile</label>
            <input type="text" name="mobile" placeholder="Mobile" class="form-control" value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label for="">City</label>
            <input type="text" name="city" placeholder="City" class="form-control" value="{{employee.city}}">
        </div>
    </div>
    <div class="form-group col-md-6">
       <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a href="/employee/list" type="submit" class="btn btn-secondary"><i class="fa fa-list"></i> View</a>
    </div>
</form>